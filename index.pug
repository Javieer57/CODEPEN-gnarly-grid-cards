doctype html
html(lang="en")
  head    
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href!="https://fonts.googleapis.com/css2?family=Lato&family=Playfair+Display&display=swap")    
    link(rel="stylesheet", href="styles.css")
    title Gnarly grid cards
  body

    - function makeText() { 
    - const lorem = 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatum veritatis eaque necessitatibus, explicabo vero hic, perspiciatis unde minus error consectetur, quos sunt officiis ad repellendus pariatur eligendi tempora praesentium tenetur';
    - const loremArray = lorem.split(' ');
    - const amountOfText = Math.floor(Math.random() * (30 - 10) + 10);
    - const text = loremArray.slice(0, amountOfText);
    - return text.join(' ') + '.';
    - }

    ol.cards__container(title="Blog entries")
      - for (let i = 1; i <= 4; i++)
        li.card
          .card__thumb
            img.animate(src=`./assets/img-${i}.png`)
          .card__content
            h3.card__title Card Title #{i}
            p.card__text #{makeText()}
            a.card__btn(aria-label=`Read more about Card Title ${i}`, href="#")
              img(src="./assets/arrow-right-solid.svg", alt="")